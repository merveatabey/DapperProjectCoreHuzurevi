
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";

}
@model DapperCoreProjectHuzurevi.Models.HakkimizdaViewModel
<!DOCTYPE html>
<html lang="en">



<body class="contact-page">


    <main class="main">

        <!-- Contact Section -->
        <section id="contact" class="contact section">

            <!-- Section Title -->
            <div class="container section-title" data-aos="fade-up">
                <h2>İletişim</h2>
                <p>Bizimle iletişime geçmek için aşağıdaki formu doldurabilirsiniz. En kısa zamanda sizlere dönüş yapacağız.</p>
            </div><!-- End Section Title -->

            <div class="container" data-aos="fade-up" data-aos-delay="100">

                <div class="row gy-4">

                    <div class="col-lg-5">

                        <div class="info-wrap">
                            <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="200">
                                <i class="bi bi-geo-alt flex-shrink-0"></i>
                                <div>
                                    <h3>Adres</h3>
                                    <p>@Model.Iletisim.Adres</p>
                                </div>
                            </div><!-- End Info Item -->

                            <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="300">
                                <i class="bi bi-telephone flex-shrink-0"></i>
                                <div>
                                    <h3>Telefon</h3>
                                    <p>@Model.Iletisim.Telefon</p>
                                </div>
                            </div><!-- End Info Item -->

                            <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="400">
                                <i class="bi bi-envelope flex-shrink-0"></i>
                                <div>
                                    <h3>E-Posta</h3>
                                    <p>@Model.Iletisim.Email</p>
                                </div>
                            </div><!-- End Info Item -->

                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3023.490425327306!2d28.956546815258998!3d41.01513797930326!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab96c638b3b07%3A0x400ebbde4908300!2sIstanbul%2C%20Turkey!5e0!3m2!1sen!2sus!4v1676964306323!5m2!1sen!2sus"
                                    frameborder="0" style="border:0; width: 100%; height: 270px;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
                            </iframe>
                        </div>
                    </div>

                    <div class="col-lg-7">
                        <form asp-action="Iletisim" method="post" class="php-email-form" data-aos="fade-up" data-aos-delay="200">
                            <div class="row gy-4">

                                <div class="col-md-6">
                                    <label for="name-field" class="pb-2">Ad Soyad</label>
                                    <input asp-for="IletisimMesaj.AdSoyad" type="text" id="name-field" class="form-control" required>
                                </div>

                                <div class="col-md-6">
                                    <label for="email-field" class="pb-2">E-Posta</label>
                                    <input asp-for="IletisimMesaj.Eposta" type="email" class="form-control" id="email-field" required>
                                </div>

                                <div class="col-md-12">
                                    <label for="subject-field" class="pb-2">Konu</label>
                                    <input asp-for="IletisimMesaj.Konu" type="text" class="form-control" id="subject-field" required>
                                </div>

                                <div class="col-md-12">
                                    <label for="message-field" class="pb-2">Mesaj</label>
                                    <textarea asp-for="IletisimMesaj.Mesaj" class="form-control" rows="10" id="message-field"></textarea>
                                </div>

                                <div class="col-md-12 text-center">
                                    <div class="loading">Loading</div>
                                    <div class="error-message"></div>
                                    <div class="sent-message">Mesajınız gönderildi. Teşekkürler!</div>

                                    <button type="submit">Gönder</button>
                                </div>

                            </div>
                        </form>
                    </div><!-- End Contact Form -->

                </div>

            </div>

        </section><!-- /Contact Section -->

    </main>


</body>

</html>